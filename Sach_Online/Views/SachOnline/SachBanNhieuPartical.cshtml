@model IEnumerable<Sach_Online.Models.SACH>

<head>
    <link rel="stylesheet" href="~/Content/Demo.css">
</head>

<h2 class="text-center">SACH BAN NHIEU</h2>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbnail">
                <img src="~/Images/@item.AnhBia" alt="Thumbnail Image 1" class="img-responsive img-rounded imgbook" style="width:200px; height: auto;">
                <div class="caption">
                    <h4 style="min-height: 100px; text-align: center;">
                        <a href="@Url.Action("BookDetail", "SachOnline", new { id = item.MaSach })" style="display: block;">@item.TenSach</a>
                    </h4>
                    <p>@item.MoTa</p>
                    <p>
                        <a href="#" class="btn btn-primary" role="button">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>Add to cart
                        </a>

                    </p>

                </div>
            </div>
        </div>
    }

